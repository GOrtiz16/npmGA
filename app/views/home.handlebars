<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }
</style>

<table>
    <thead>
        <tr>
            <th>ProductID</th>
            <th>Name</th>
            <th>ProductNumber</th>
            <th>Color</th>
            <th>StandardCost</th>
            <th>ListPrice</th>
            <!-- Agrega aquí el resto de las columnas que quieras mostrar -->
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{ProductID}}</td>
            <td>{{Name}}</td>
            <td>{{ProductNumber}}</td>
            <td>{{Color}}</td>
            <td>{{StandardCost}}</td>
            <td>{{ListPrice}}</td>
            <!-- Agrega aquí el resto de las columnas que quieras mostrar -->
        </tr>
        {{/each}}
    </tbody>
</table>